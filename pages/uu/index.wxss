.content {
  position: relative;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
}

.index-background {
  width: 100%;
  height: 400rpx;
  filter: blur(3px);
}

.text-area {
  width: 100%;
}

.total-data {
  position: absolute;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  height: 100%;
}

.total-data text {
  color: #fff;
  display: block;
}

.lefts {
  width: 77%;
}

.items:nth-child(n+2) {
  margin-top: 60rpx;
}

.right {
  flex: 1;
}

.right .items:nth-child(n+2) {
  margin-top: 60rpx;
}

.right text {
  display: inline-block;
}